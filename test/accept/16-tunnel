yellowTriangle = Triangle(fill-color: #FFFF00, height: 10, base: 40, rotation: 360)

Center () {
    Stack() {
        TranslateX(end-value: 100, alternate: false, loop: true, duration: 200) {
            Resize (scale: 1.5, duration: 200, loop: true, alternate: false ) {
                yellowTriangle  
            } 
        },
        TranslateX(end-value: -100, alternate: false, loop: true, duration: 200) {
            Resize (scale: 1.5, duration: 200, loop: true, alternate: false ) {
                yellowTriangle  
            }  
        },
        TranslateY(end-value: 100, alternate: false, loop: true, duration: 200 ) {
            Resize (scale: 1.5, duration: 200, loop: true, alternate: false ) {
                yellowTriangle  
            }
        },
        TranslateY(end-value: -100, alternate: false, loop: true, duration: 200 ) {
            Resize (scale: 1.5, duration: 200, loop: true, alternate: false ) {
                yellowTriangle  
            } 
        }
    }
}